<div
  class="bg-gray-700 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"
>
  <h1 class="title">Manejador de productos en tiempo real</h1>
  <div id="productsRT" class="products-wrapper">
    {{#each products}}
      <div class="product-container">
        <h2>Nombre:<br /> {{title}}</h2>
        <p>Descripción:<br /> {{description}}</p>
        <p>Precio:<br /> €{{price}}</p>
        <p>Id:<br /> {{id}}</p>
      </div>
    {{/each}}
  </div>
  <form id="addProductForm" class="inputs-container">
    <div>
      <label for="title">Nombre:</label>
      <input type="text" id="title" class="text-black" />
    </div>
    <div>
      <label for="description">Descripción:</label>
      <input type="text" id="description" class="text-black" />
    </div>
    <div>
      <label for="price">Precio:</label>
      <input type="number" id="price" class="text-black" />
    </div>
    <div>
      <label for="thumbnails">Thumbnails:</label>
      <input type="text" id="thumbnails" disabled />
    </div>
    <div>
      <label for="stock">Stock:</label>
      <input type="number" id="stock" class="text-black" />
    </div>
    <div>
      <label for="code">Código:</label>
      <input type="text" id="code" class="text-black" />
    </div>
    <div>
      <label for="category">Categoría:</label>
      <input type="text" id="category" class="text-black" />
    </div>
    <br />
    <button type="submit">Agregar producto</button>
  </form>
  <form id="deleteProductForm" class="inputs-container">
    <div>
      <label for="id">Id:</label>
      <input type="text" id="id" class="text-black" />
    </div>
    <button type="submit">Eliminar producto</button>
  </form>
</div>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script type="module" src="js/realtimeproducts.js"></script>